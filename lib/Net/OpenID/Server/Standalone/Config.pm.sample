package Net::OpenID::Server::Standalone::Config;

use strict;
use warnings;

use MIME::Base64;
use Data::UUID;

my $config = {
	users => {
    'the_your_nickname' => {
        pass        => 'md5_base64 of your password',
        url         => 'http://your.openid.url/',
        trust_root  => qr/(blogger\.com|cpan\.org|ccmixter\.org|stickr\.com|mychores\.co\.uk\/openid|qdos\.com|demand-openid\.rpxnow\.com|livejournal\.com)\/?$/,
        # http://openid.net/specs/openid-simple-registration-extension-1_0.html
        sre         => {
            'sreg.nickname'     => 'nickname_for_outside_world',
            'sreg.fullname'     => 'Your Fullname',
        },
    },
	},
# Where to redirect in case of wrong login/pass, wrong OpenID url, or
# failed filter for RP:
	setupUrl => '/setup?action=login&rnd='.encode_base64( Data::UUID->new->create() ),
	serverSecret => 'some_random_sequence_put_your_own',
};
chomp $config->{ setupUrl };

###	No user-serviceable part below this line ###

sub href{
	my $rv = $config;
	if( @_ > 0 ){
		while( shift @_ ){
			if( defined $rv->{ $_ } ){
				$rv = $rv->{ $_ };
			} else {
				$rv = undef;
				last;
			}
		}
	}
	return $rv;
}

1;
